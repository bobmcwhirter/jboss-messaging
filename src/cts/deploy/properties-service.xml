<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server>
<!-- $Id$ -->

<server>

  <!-- ==================================================================== -->
  <!-- PropertyEditorManager Service                                        -->
  <!-- ==================================================================== -->

  <!--
     | Allows access to the PropertyEditorManager, which is used when setting
     | MBean attribute values from configuration.
   -->

  <mbean code="org.jboss.varia.property.PropertyEditorManagerService"
    name="jboss:type=Service,name=PropertyEditorManager">

    <!-- 
       | Register and editor for each of the type_name=editor_type_name listed
       | in properties file style convetion.

    <attribute name="Editors">
      java.net.URL=my.project.editors.URLPropertyEditor
    </attribute>

    -->

  </mbean>


  <!-- ==================================================================== -->
  <!-- System Properties Service                                            -->
  <!-- ==================================================================== -->

  <!-- CTS system properties -->
  <mbean code="org.jboss.varia.property.SystemPropertiesService"
    name="jboss:type=Service,name=SystemProperties">
    <attribute name="Properties" replace="false">
      vendor.javax.security.jacc.policy.provider=org.jboss.security.jacc.DelegatingPolicy
      vendor.javax.security.jacc.PolicyConfigurationFactory.provider=org.jboss.security.jacc.JBossPolicyConfigurationFactory
      javax.security.jacc.policy.provider=com.sun.ts.tests.jacc.provider.TSPolicy
      javax.security.jacc.PolicyConfigurationFactory.provider=com.sun.ts.tests.jacc.provider.TSPolicyConfigurationFactoryImpl
      log.file.location=${jboss.server.home.dir}/log
      javax.xml.registry.ConnectionFactoryClass=com.sun.xml.registry.ebxml.ConnectionFactoryImpl
      javax.net.ssl.keyStore=${jboss.server.home.dir}/conf/keystores/clientcert.jks
      javax.net.ssl.keyStorePassword=changeit
      jaxr-ebxml.home=${jboss.server.home.dir}/data/ebxmlrr/data
      jaxr-ebxml.security.storetype=JKS
      jaxr-ebxml.security.keystore=security/keystore.jks
      jaxr-ebxml.security.storepass=ebxmlrr
      jaxr-ebxml.security.keypass=ebxmlrr
    </attribute>
  </mbean>
</server>
