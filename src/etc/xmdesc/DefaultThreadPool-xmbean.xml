<?xml version="1.0" encoding="UTF-8"?>
   <!DOCTYPE mbean PUBLIC
      "-//JBoss//DTD JBOSS XMBEAN 1.2//EN"
      "http://www.jboss.org/j2ee/dtd/jboss_xmbean_1_2.dtd">



<mbean>
   <description>A thread pool implementation based on Doug Lea's PooledExecutor</description>
   <class>org.jboss.jms.server.plugin.DefaultThreadPool</class>

   <!-- Managed constructors -->

   <constructor>
      <name>DefaultThreadPool</name>
      <parameter>
         <name>size</name>
         <type>int</type>
      </parameter>
   </constructor>

   <!-- Managed attributes -->

   <attribute access="read-only" getMethod="getInstance">
      <description>The instance to plug into the server peer</description>
      <name>Instance</name>
      <type>java.lang.Object</type>
   </attribute>


   <attribute access="read-write" getMethod="getSize" setMethod="setSize">
      <description>Thread pool size</description>
      <name>Size</name>
      <type>int</type>
   </attribute>

   <!-- Managed operations -->

   <operation>
      <description>JBoss Service lifecycle operation</description>
      <name>create</name>
   </operation>

   <operation>
      <description>JBoss Service lifecycle operation</description>
      <name>start</name>
   </operation>

   <operation>
      <description>JBoss Service lifecycle operation</description>
      <name>stop</name>
   </operation>

   <operation>
      <description>JBoss Service lifecycle operation</description>
      <name>destroy</name>
   </operation>

</mbean>