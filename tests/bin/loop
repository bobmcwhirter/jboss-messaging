#!/bin/sh


count=200
i=0

while [ $i -lt $count ]; do
	i=`expr $i + 1`
        echo "#############################################"
        echo "#                                           #"
	echo "#         Running test loop $i"
        echo "#                                           #"
        echo "#############################################"
        echo ""
        if ! ./runtest; then
		echo "Test failed on loop $i"
                exit 1
        fi
done



echo "#############################################"
echo "#                                           #"
echo "#      $count loops ran successfully" 
echo "#                                           #"
echo "#############################################"
