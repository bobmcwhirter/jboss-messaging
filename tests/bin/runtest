#TARGET_CLASS=org.jboss.test.messaging.jms.BrowserTest
#TARGET_CLASS=org.jboss.test.messaging.jms.AcknowledgmentTest
#TARGET_CLASS=org.jboss.test.messaging.jms.TemporaryDestinationTest
